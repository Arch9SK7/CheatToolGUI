<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net9.0-windows</TargetFramework>
    <RootNamespace>CheatToolUI</RootNamespace>
    <Nullable>enable</Nullable>
    <UseWindowsForms>true</UseWindowsForms>
    <ImplicitUsings>enable</ImplicitUsings>
    <ApplicationIcon>output.ico</ApplicationIcon>
    <BuildCounter>0</BuildCounter>
    <Revision>*</Revision>
    <MajorMinorVersion>1.4</MajorMinorVersion>
    <Version>$(MajorMinorVersion).$(BuildCounter)</Version>
    <FileVersion>$(MajorMinorVersion).$(BuildCounter)</FileVersion>
    <Product>CheatTool By Arch9SK7</Product>
    <Company>THQN</Company>
  </PropertyGroup>

  <ItemGroup>
    <Content Include="output.ico" />
  </ItemGroup>

  <ItemGroup>
    <None Update="ARMdisassemble_cheats.py">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
    <None Update="assemble_cheats.py">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
    <None Update="InstructionData.json">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
    <None Update="relocator.py">
      <CopyToOutputDirectory>Never</CopyToOutputDirectory>
    </None>
    <None Update="vm_opcodes.json">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
  </ItemGroup>

</Project>